<div class="is-size-1	is-turquoise">🏠 Home</div>

<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<a href="post/{{post.id}}">
  <header class="card-header blog-post p-2 my-4  is-justify-content-space-between height ">
    <div>{{post.title}}</div>
    <div>Posted by {{post.user.username}} on {{format_date post.date_created}}</div>
  </header>
</a>
{{/each}}